{
  "manifest_version": 2,

  "name": "RocBuses",
  "description": "Chrome extension of RocBuses",
  "version": "1.0.3",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background" : {
    "persistent" : false,
  	"scripts": ["core/popup.js"]
  },
  
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
